<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image_path %>
    <%= f.input :description %>
    <%= f.input :age_restriction %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.association :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
