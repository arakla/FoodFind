<div class="page-header">
  <%= link_to events_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_event_path(@event), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show event</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @event.name %></dd>

  <dt>Image path:</dt>
  <dd><%= @event.image_path %></dd>

  <dt>Description:</dt>
  <dd><%= @event.description %></dd>

  <dt>Age restriction:</dt>
  <dd><%= @event.age_restriction %></dd>

  <dt>Description:</dt>
  <dd><%= @event.description %></dd>

  <dt>Start time:</dt>
  <dd><%= @event.start_time %></dd>

  <dt>End time:</dt>
  <dd><%= @event.end_time %></dd>

  <dt>Location:</dt>
  <dd><%= @event.location %></dd>

</dl>